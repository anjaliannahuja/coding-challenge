<% if comment.id %>
  <p>
    <%= comment.comment %>
  </p>

  <p>
      <%= link_to 'Delete', [comment.post, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this comment?'} %>
      <%= link_to 'Edit', edit_post_comment_path(comment.post_id, comment.id) %>
  </p>
<% end %>