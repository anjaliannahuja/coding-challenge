<div class="container">

  <!-- Link to go back to the post with comments  -->
  <h4><%= link_to 'Back', post_comments_path %></h4>
  <h3>Edit Comment</h3>

  <!-- Edit comment form -->
  <%= form_with(model: [ @post, @comment], local: true) do |form| %>
    <!-- Comment is editable field -->
    <p>
      <%= form.text_area :comment %>
    </p>

    <!-- Save button -->
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>