<!-- View for showing a single `Post` -->
<%= link_to 'Back', posts_path %>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<%= link_to 'Delete Post', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure you would like to delete this post?' } %>

<h2>Comments</h2>
<%= render 'comments/form' %>

<%= render @post.comments %>