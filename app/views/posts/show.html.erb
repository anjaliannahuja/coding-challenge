<!-- View for showing a single `Post` -->
<div class="container">
    <!-- Link to go back and see all posts -->
    <h4><%= link_to 'Back', posts_path %></h4>

    <!-- Show post title -->
    <h2>
      <%= @post.title %>
    </h2>

    <!-- Show full post body -->
    <p>
      <%= @post.body %>
    </p>

    <!-- Show full date -->
    <p>
      <%= I18n.localize @post.created_at.to_date, format: :long %>
    
    <!-- Delete button with confirmation -->
    </p>
      <%= button_to 'Delete Post', post_path(@post),
                    method: :delete,
                    data: { confirm: 'Are you sure you would like to delete this post?' } %>
</div>

<div class="container">
  <h4>Comments</h4>
  <!-- Use partial rendering to show comment form -->
  <%= render 'comments/form' %>

  <!-- Use partial rendering to show all comments -->
  <%= render @post.comments %>
</div>